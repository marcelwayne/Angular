<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Aisel\UserBundle\Entity\FrontendUser"  table="x_user_frontend" repository-class="Aisel\UserBundle\Entity\FrontendUserRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="tablename_seq" allocation-size="100" initial-value="1" />
        </id>

        <field name="createdAt"    type="datetime"   column="created_at" />
        <field name="updatedAt"    type="datetime"   column="updated_at" />

        <!-- Profile fields -->
        <field name="username"      type="string"     column="username"  length="25" nullable="false" unique="true" />
        <field name="password"      type="string"     column="password"  length="64" nullable="false"  />
        <field name="email"         type="string"     column="email"  length="60" nullable="false" unique="true" />
        <field name="is_active"     type="boolean"    column="is_active"  />

    </entity>

</doctrine-mapping>
