{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}

    {% spaceless %}
        {% set padding = object.lvl * 20 %}
        <a style="padding-left: {{ padding }}px" class="sonata-link-identifier"
           href="{{ admin.generateObjectUrl(field_description.options.route.name, object, field_description.options.route.parameters) }}">
            {{ value }}
        </a>
    {% endspaceless %}


{% endblock %}
